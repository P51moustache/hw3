<h2><%= @place["name"] %></h2>

<h3>My Journal Entries</h3>

<% if @entries.size > 0 %>
  <ul style="list-style-type: none; padding: 0;">
    <% for entry in @entries %>
      <li class="entry">
        <h3><%= entry["title"] %></h3>
        <p class="entry-date"><strong>Date:</strong> <%= entry["occurred_on"] %></p>
        <p><%= entry["description"] %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No entries yet</p>
<% end %>

<div class="actions">
  <a href="/places/<%= @place["id"] %>/entries/new">
    <button>New Entry</button>
  </a>
</div>

<p>
  <a href="/places" class="back-link">Back to All Places</a>
</p>
