<h2>New Entry for <%= @place["name"] %></h2>

<form action="/entries" method="post">
  <input type="hidden" name="entry[place_id]" value="<%= @place["id"] %>">
  
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" id="title" name="entry[title]" required placeholder="Enter title">
  </div>
  
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea id="description" name="entry[description]" rows="5" required placeholder="Describe your experience..."></textarea>
  </div>
  
  <div class="form-group">
    <label for="occurred_on">Date:</label>
    <input type="date" id="occurred_on" name="entry[occurred_on]" required>
  </div>

  <button type="submit">Create Entry</button>
</form>

<p>
  <a href="/places/<%= @place["id"] %>" class="back-link">Back to <%= @place["name"] %></a>
</p>
